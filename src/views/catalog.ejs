<%- include('partials/header') %>
<link rel="stylesheet" href="/css/catalog.css">
<link rel="stylesheet" href="/css/main.css">
<main>
    <h1>Course Catalog</h1>
    <p>Browse our available courses and click on any course to see detailed information including available sections and instructors.</p>

    <div class="course-list">
        <% Object.values(courses).forEach(course => { %>
            <div class="course-card">
                <h3><a href="/catalog/:slugId<%= course.slug %>"><%= course.title %></a></h3>
                <p class="course-name"><%= course.name %></p>
                <p class="course-creditHours"><%= course.creditHours %> credits</p>
                <p class="course-department"><%= course.department %> Department</p>
    
            </div>
        <% }); %>
    </div>
</main>
<%- include('partials/footer') %>