<%- include('partials/header') %>
<% if (queryParams.sort) { %>
    
    <div class="sort-message">
        <p>Currently sorted by: <%= queryParams.sort %></p>
    </div>
<% } else { %>
    <div class="sort-message">
        <p>No sorting applied. Default order shown.</p>
    </div>
<% } %>
<link rel="stylesheet" href="/css/catalog.css">
<link rel="stylesheet" href="/css/main.css">
<main>
    <div class="course-header">
        <h1><%= course.title || course.name %></h1>
        <p class="course-meta"><%= course.courseCode || course.id %> â€¢ <%= course.credits %> credits</p>
        <p class="course-description"><%= course.description %></p>
    </div>

    <div class="sections">
        <div class="sections-header">
            <h2>Available Sections</h2>
            <div class="sort-options">
                <span>Sort by: </span>
                <a href="? sort=time" class="<%= currentSort === 'time' ? 'active' : '' %>">Time</a>
                <a href="?sort=professor" class="<%= currentSort === 'professor' ? 'active' : '' %>">Professor</a>
                <a href="?sort=room" class="<%= currentSort === 'room' ? 'active' : '' %>">Room</a>
                
        </div>

    
    </div>

    <div class="navigation">
        <p><a href="/catalog">&larr; Back to Course Catalog</a></p>
    </div>
</main>
<%- include('partials/footer') %>